# ===========================================
# MONEYVOICE BACKEND - Environment Variables
# ===========================================

# Node Environment (development | production | test)
NODE_ENV=production

# Server Configuration
PORT=5000

# ===========================================
# DATABASE (Supabase PostgreSQL)
# ===========================================
# Use DATABASE_URL (recommended)
DATABASE_URL=postgresql://postgres.YOUR_PROJECT_REF:YOUR_PASSWORD@aws-1-ap-south-1.pooler.supabase.com:6543/postgres

# Option 2: Use individual credentials (alternative)
# DB_HOST=aws-1-ap-south-1.pooler.supabase.com
# DB_PORT=6543
# DB_NAME=postgres
# DB_USER=postgres.lntelebxzbkmuzccrrku
# DB_PASSWORD=YOUR_PASSWORD
# DB_LOGGING=false

# For testing database
DB_NAME_TEST=scan_tunai_db_test

# DB Sync (set to true only in development for auto schema update)
DB_SYNC=false

# ===========================================
# REDIS (for caching & session)
# ===========================================
# Use REDIS_URL for cloud Redis (Redis Cloud, Upstash, etc)
REDIS_URL=redis://default:YOUR_REDIS_PASSWORD@YOUR_REDIS_HOST:PORT

# Or use individual settings
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# ===========================================
# JWT AUTHENTICATION
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# ===========================================
# GOOGLE GEMINI AI
# ===========================================
GEMINI_API_KEY=your-gemini-api-key

# ===========================================
# FRONTEND URL (for CORS)
# ===========================================
FRONTEND_URL=https://your-frontend-domain.com

# ===========================================
# UPLOAD CONFIGURATION
# ===========================================
MAX_FILE_SIZE=10485760
